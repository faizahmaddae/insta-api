# Instagram API Configuration
# Copy this file to .env and fill in the values

# ===================
# Application Settings
# ===================

# Application name displayed in docs
APP_NAME="Instagram API"

# Application version
APP_VERSION="1.0.0"

# Debug mode (enables detailed errors and docs)
DEBUG=true

# API URL prefix for all routes
API_PREFIX="/api/v1"

# ===================
# Instagram Credentials
# ===================

# Optional: Instagram username for auto-login
# If provided with password, will auto-login on startup
INSTAGRAM_USERNAME=

# Optional: Instagram password for auto-login
INSTAGRAM_PASSWORD=

# ===================
# Session Management
# ===================

# Directory to store session files
SESSION_DIR="./sessions"

# ===================
# Download Settings
# ===================

# Directory for downloaded media files
DOWNLOAD_DIR="./downloads"

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# ===================
# Rate Limiting
# ===================

# Maximum requests per window
RATE_LIMIT_REQUESTS=60

# Time window in seconds
RATE_LIMIT_WINDOW=60

# ===================
# Security
# ===================

# Optional: API key for authentication
# If set, all requests must include X-API-Key header
API_KEY=

# Allowed CORS origins (comma-separated)
# Use * for all origins (not recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===================
# Logging
# ===================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
